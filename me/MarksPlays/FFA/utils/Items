package me.MarksPlays.FFA.utils;

import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;

public class Items {
	
	public static void giveItems(Player p) {
		
		ItemStack ih = new ItemStack(Material.IRON_HELMET);
		ItemMeta ihmeta = ih.getItemMeta();
		ihmeta.setDisplayName("§8< §aHelm §8>");
		ih.setDurability((short) 10000);
		ih.setItemMeta(ihmeta);

		ItemStack ic = new ItemStack(Material.IRON_CHESTPLATE);
		ItemMeta icmeta = ic.getItemMeta();
		icmeta.setDisplayName("§8< §aBrustplatte §8>");
		ic.setDurability((short) 10000);
		ic.setItemMeta(icmeta);

		ItemStack il = new ItemStack(Material.IRON_LEGGINGS);
		ItemMeta ilmeta = il.getItemMeta();
		ilmeta.setDisplayName("§8< §aHose §8>");
		il.setDurability((short) 10000);
		il.setItemMeta(ilmeta);

		ItemStack ib = new ItemStack(Material.IRON_BOOTS);
		ItemMeta ibmeta = ib.getItemMeta();
		ibmeta.setDisplayName("§8< §aSchuhe §8>");
		ib.setDurability((short) 10000);
		ib.setItemMeta(ibmeta);

		ItemStack is = new ItemStack(Material.STONE_SWORD);
		ItemMeta ismeta = is.getItemMeta();
		ismeta.setDisplayName("§8< §aSchwert §8>");
		is.setDurability((short) 10000);
		is.setItemMeta(ismeta);

		ItemStack ir = new ItemStack(Material.FISHING_ROD);
		ItemMeta irmeta = ir.getItemMeta();
		irmeta.setDisplayName("§8< §aAngel §8>");
		ir.setDurability((short) 15);
		ir.setItemMeta(irmeta);

		ItemStack ibo = new ItemStack(Material.BOW);
		ItemMeta ibometa = ibo.getItemMeta();
		ibometa.setDisplayName("§8< §aBogen §8>");
		ibo.setDurability((short) 5);
		ibo.setItemMeta(ibometa);

		ItemStack ia = new ItemStack(Material.ARROW, 5);
		ItemMeta iameta = ia.getItemMeta();
		iameta.setDisplayName("§8< §aPfeil §8>");
		ia.setItemMeta(iameta);

		ItemStack it = new ItemStack(Material.TNT);
		ItemMeta itmeta = it.getItemMeta();
		itmeta.setDisplayName("§8< §aTNT §8>");
		it.setItemMeta(itmeta);
		

		ItemStack iy = new ItemStack(Material.FLINT_AND_STEEL);
		ItemMeta iymeta = iy.getItemMeta();
		iymeta.setDisplayName("§8< §aFeuerzeug §8>");
		it.setDurability((short) 1);
		iy.setItemMeta(iymeta);
		
		p.getInventory().setHelmet(ih);
		p.getInventory().setChestplate(ic);
		p.getInventory().setLeggings(il);
		p.getInventory().setBoots(ib);
		
		p.getInventory().setItem(0, is);
		p.getInventory().setItem(1, ibo);
		p.getInventory().setItem(2, ir);
		p.getInventory().setItem(6, iy);
		p.getInventory().setItem(7, it);
		p.getInventory().setItem(8, ia);
		
	}

}
